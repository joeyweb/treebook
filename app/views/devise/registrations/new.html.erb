<div class="row">
  <div class="span8">
    <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: {class: "well"}) do |f| %>
    <fieldset>
      <legend>Sign up</legend>
        <%= devise_error_messages! %>
        <%= f.input :first_name, placeholder: 'John', :autofocus => true %>
        <%= f.input :last_name, placeholder: 'Doe' %>
        <%= f.input :profile_name %>
        <%= f.input :email, placeholder: 'email@email.com' %>
        <%= f.input :password %>
        <%= f.input :password_confirmation %>
        <%= f.button :submit, "Sign up" %>
    </fieldset>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
  <div class="span4">
    <h2>Register bitches!</h2>
  </div>
</div>


